{
    "name": "jakobjohansson/hook",
    "description": "a library for quickly dealing with git webhooks",
    "type": "library",
    "homepage": "https://jakobjohansson.github.io/hook/",
    "keywords": ["webhook", "github", "gitlab", "bitbucket"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jakob Johansson",
            "email": "jakobjohansson2@icloud.com"
        }
    ],
    "require" : {
        "php" : ">=7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4|^7.0",
        "guzzlehttp/guzzle": "^6.3",
        "codeclimate/php-test-reporter": "^0.4.4"
    },
    "autoload": {
        "psr-4": {
            "Hook\\": "src/"
        }
    },
    "autoload-dev": {
       "psr-4": {
           "Hook\\Tests\\": "tests/"
       }
   },
    "scripts": {
        "test": "phpunit"
    }
}
